{
  "name": "tegaki",
  "version": "0.0.1",
  "type": "module",
  "description": "",
  "keywords": [],
  "author": "Ubugeeei <ubuge1122@gmail.com>",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "engines": {
    "node": ">=16.15.0",
    "pnpm": "8",
    "npm": "please_use_pnpm_instead"
  },
  "volta": {
    "node": "18.18.2"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "pnpm run bundle && pnpm run build:dts",
    "bundle": "node scripts/build.js",
    "build:dts": "rm -rf temp && tsc -p tsconfig.build.json && node scripts/dts.js && rm -rf temp",
    "fmt": "prettier",
    "lint": "ESLINT_USE_FLAT_CONFIG=true eslint",
    "spell-check": "cspell lint \"**\" --no-progress --show-suggestions --show-context --cache",
    "play": "cd examples/_basic && pnpm run dev"
  },
  "lint-staged": {
    "*": [
      "pnpm run spell-check",
      "pnpm run fmt --check",
      "pnpm run lint"
    ]
  },
  "devDependencies": {
    "cspell": "^7.3.8",
    "esbuild": "^0.19.4",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  }
}
